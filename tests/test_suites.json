{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Test suite definitions for struct-frame code generation framework",
  "version": "2.0",
  
  "test_suites": [
    {
      "name": "frame_format_matrix",
      "description": "Frame format cross-compatibility matrix using profiles",
      "plugin": "frame_format_matrix",
      "test_runner": "test_standard",
      "frame_formats": [
        {
          "name": "profile_standard",
          "display_name": "ProfileStandard",
          "profile": "BasicDefault",
          "output_file": "{lang_name}_profile_standard_test_data.bin"
        },
        {
          "name": "profile_sensor",
          "display_name": "ProfileSensor",
          "profile": "TinyMinimal",
          "output_file": "{lang_name}_profile_sensor_test_data.bin"
        },
        {
          "name": "profile_ipc",
          "display_name": "ProfileIPC",
          "profile": "NoneMinimal",
          "output_file": "{lang_name}_profile_ipc_test_data.bin"
        },
        {
          "name": "profile_bulk",
          "display_name": "ProfileBulk",
          "profile": "BasicExtended",
          "output_file": "{lang_name}_profile_bulk_test_data.bin"
        },
        {
          "name": "profile_network",
          "display_name": "ProfileNetwork",
          "profile": "BasicExtendedMultiSystemStream",
          "output_file": "{lang_name}_profile_network_test_data.bin"
        }
      ]
    },
    {
      "name": "extended_msgid_matrix",
      "description": "Extended message ID tests (>255) for profiles with pkg_id support",
      "plugin": "frame_format_matrix",
      "test_runner": "test_extended",
      "messages_file": "extended_messages.json",
      "base_language": "cpp",
      "frame_formats": [
        {
          "name": "profile_bulk",
          "display_name": "ProfileBulk",
          "profile": "BasicExtended",
          "output_file": "{lang_name}_extended_bulk_test_data.bin"
        },
        {
          "name": "profile_network",
          "display_name": "ProfileNetwork",
          "profile": "BasicExtendedMultiSystemStream",
          "output_file": "{lang_name}_extended_network_test_data.bin"
        }
      ]
    }
  ]
}
