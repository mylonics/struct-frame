{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Test suite definitions for struct-frame code generation framework",
  "version": "2.0",
  
  "test_suites": [
    {
      "name": "frame_format_matrix",
      "description": "Frame format cross-compatibility matrix using profiles",
      "plugin": "frame_format_matrix",
      "test_runner": "test_runner",
      "frame_formats": [
        {
          "name": "profile_standard",
          "display_name": "ProfileStandard",
          "profile": "BasicDefault",
          "output_file": "{lang_name}_profile_standard_test_data.bin"
        },
        {
          "name": "profile_sensor",
          "display_name": "ProfileSensor",
          "profile": "TinyMinimal",
          "output_file": "{lang_name}_profile_sensor_test_data.bin"
        }
      ]
    }
  ]
}
